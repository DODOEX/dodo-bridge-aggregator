{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
    ],
    "paths": {
        "~/*": [
            "src/*"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
    ]
}